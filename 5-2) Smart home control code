    const clearLog = () => {
      document.getElementById('log').textContent = '';
      const utterance = new SpeechSynthesisUtterance('ë©”ì‹œì§€ë¥¼ í´ë¦¬ì–´ í–ˆìŠµë‹ˆë‹¤.');
      window.speechSynthesis.speak(utterance);
    };

    const client = mqtt.connect('ws://pubcode2.iptime.org:39001', {
      clientId: 'webClient_' + Math.random().toString(16).substr(2, 8)
    });

    client.on('connect', () => {
      log('âœ… WebSocket MQTT ì—°ê²°ë¨');
      client.subscribe('b03_test');
      client.subscribe('b03_sensor');
      document.getElementById('connectionStatus').className = 'status-indicator status-online';
    });

    client.on('message', (topic, message) => {
      if (topic === 'b03_sensor') {
        try {
          const data = JSON.parse(message.toString());
          if (data.temperature !== undefined) {
            document.getElementById('temperature').textContent = `${data.temperature.toFixed(1)}Â°C`;
          }
          if (data.humidity !== undefined) {
            document.getElementById('humidity').textContent = `${data.humidity.toFixed(1)}%`;
          }
          log(`ğŸŒ¡ï¸ ì„¼ì„œ ë°ì´í„°: ì˜¨ë„ ${data.temperature}Â°C, ìŠµë„ ${data.humidity}%`);
        } catch (error) {
          log(`âŒ ì„¼ì„œ ë°ì´í„° íŒŒì‹± ì˜¤ë¥˜: ${error.message}`);
        }
      } else {
        log(`ğŸ“© ìˆ˜ì‹ ë¨: ${message.toString()}`);
      }
    });

    client.on('error', () => {
      document.getElementById('connectionStatus').className = 'status-indicator status-offline';
    });

    client.on('offline', () => {
      document.getElementById('connectionStatus').className = 'status-indicator status-offline';
    });

    const sendText = (text) => {
      client.publish('b03_test', text);
      const deviceName = getDeviceName(text);
      log(`ğŸ“¤ ì „ì†¡ë¨: ${deviceName}(${text})`);
      if (text === 'ON') {
        const utterance = new SpeechSynthesisUtterance('ì¡°ëª…ì´ ì¼œì¡ŒìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }
      if (text === 'OFF') {
        const utterance = new SpeechSynthesisUtterance('ì¡°ëª…ì´ êº¼ì¡ŒìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }
      if (text === 'PAN_ON') {
        const utterance = new SpeechSynthesisUtterance('íŒ¬ì´ ì¼œì¡ŒìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }
      if (text === 'PAN_OFF') {
        const utterance = new SpeechSynthesisUtterance('íŒ¬ì´ êº¼ì¡ŒìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }	  
      if (text === 'DOOR_ON') {
        const utterance = new SpeechSynthesisUtterance('ë¬¸ì´ ì—´ë ¸ìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }
      if (text === 'DOOR_OFF') {
        const utterance = new SpeechSynthesisUtterance('ë¬¸ì´ ë‹«í˜”ìŠµë‹ˆë‹¤.');
        window.speechSynthesis.speak(utterance);
      }
    };

    const startVoiceRecognition = () => {
      if (!('webkitSpeechRecognition' in window)) {
        alert('ì´ ë¸Œë¼ìš°ì €ëŠ” ìŒì„± ì¸ì‹ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
        return;
      }

      const recognition = new webkitSpeechRecognition();
      recognition.lang = 'ko-KR';
      recognition.onresult = (event) => {
        const transcript = event.results[0][0].transcript;
        if (transcript.includes('ì¡°ëª… ì¼œ')) {
          sendText('ON');
        }
        if (transcript.includes('ì¡°ëª… êº¼')) {
          sendText('OFF');
        }
		if (transcript.includes('íŒ¬ ì¼œ')) {
          sendText('PAN_ON');
        }
        if (transcript.includes('íŒ¬ êº¼')) {
          sendText('PAN_OFF');
        }
		if (transcript.includes('ë¬¸ì—´ì–´')) {
          sendText('DOOR_ON');
        }
        if (transcript.includes('ë¬¸ë‹«ì•„')) {
          sendText('DOOR_OFF');
        }
      };
      recognition.onerror = (event) => {
        log('ìŒì„± ì¸ì‹ ì˜¤ë¥˜: ' + event.error);
      };
      recognition.start();
    };
  </script>
